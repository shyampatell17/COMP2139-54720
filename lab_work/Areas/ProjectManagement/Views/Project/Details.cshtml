@model Project
@{
    ViewData["Title"] = "Project Details";

}
        <div class="card shadow border-0 mt-4">
            <div class="card header bg-secondary bg-gradient ml-0 py-3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="text-white py-2">Project Details</h2>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input asp-for="ProjectId" hidden />
                    <div class="border p-3 mt-4">

                        <div asp-validation-summary="All"></div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" disabled class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Description" disabled class="form-control border-0 shadow" />
                            <label asp-for="Description" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="StartDate" disabled class="form-control border-0 shadow" />
                            <label asp-for="StartDate" type="date" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="EndDate" disabled class="form-control border-0 shadow" />
                            <label asp-for="EndDate" type="date" class="ms-2"></label>
                        </div>

                        <div class="row">
                            <div class="col-6 col-md-3">
                                <a asp-asp-controller="Project" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary form-control">Edit</a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Project" asp-action="Index" class="btn btn-outline-warning border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>
</div>
