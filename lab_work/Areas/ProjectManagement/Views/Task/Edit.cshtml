@model ProjectTask  // specifies an empty project
@{
    ViewData["Title"] = "Edit Task";
}


<div class="card shadow border-0 mt-4">
    <div class="card header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Task</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @Html.HiddenFor(model => model.ProjectId)

        <form asp-controller="Task" asp-action="Edit" method="post">

            @Html.HiddenFor(model => model.ProjectTaskId)

            <div class="form-floating py-2 col-12">
                <input asp-for="Title" class="form-control border-0 shadow" />
                <label asp-for="Title" class="ms-2"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" value="Edit" class="btn btn-primary form-control">Edit</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Project" asp-action="Index" class="btn btn-outline-warning border form-control">
                        Cancle
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}