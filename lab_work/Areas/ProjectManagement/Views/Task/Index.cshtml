@model IEnumerable<lab_work.Areas.ProjectManagement.Models.ProjectTask> // Specifies the collection of Project Tasks
        @{
            ViewData["Title"] = "Tasks Lists";
        }


    <div class="card shadow border-0 mt-4">
        <div class="card header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Project List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="container">
                <div class="row pb-3">
                    <div class="col-6">
                    </div>
                    <div class="col-6 text-end">
                        <a asp-route-projectId="@ViewBag.ProjectId" asp-action="Create" class="btn btn-primary">
                            <i class="fa-solid fa-folder-plus"></i> Create New Task
                        </a>
                    </div>
                </div>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Task ID
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Project ID
                            </th>
                            <th>
                                Actions
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.ProjectTaskId))
                        {
                            <tr>
                                <td> @obj.ProjectTaskId </td>
                                <td>
                                    @obj.Title
                                </td>
                                <td> @obj.Description </td>
                                <td>
                                    @obj.ProjectId
                                </td>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Task" asp-action="Edit" asp-route-id="@obj.ProjectId" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </a>
                                        <a asp-controller="Task" asp-action="Delete" asp-route-id="@obj.ProjectId" class="btn btn-danger mx-2 border">
                                            <i class="bi bi-trash3"></i> Delete
                                        </a>
                                        <a asp-controller="Task" asp-action="Details" asp-route-id="@obj.ProjectId" class="btn btn-secondary mx-2">
                                            <i class="bi bi-pencil-fill"></i> Details
                                        </a>
                                        <a asp-controller="Task" asp-action="Index" asp-route-projectId="@obj.ProjectId" class="btn btn-secondary mx-2 border">
                                            <i class="bi bi-trash3"></i> Tasks
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
