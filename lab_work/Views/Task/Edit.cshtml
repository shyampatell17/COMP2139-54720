@model ProjectTask  // specifies an empty project
@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-controller="Task" asp-action="Edit" method="post">

    @Html.HiddenFor(model => model.ProjectTaskId)

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="control-label"></>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="control-label"></>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back To List</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}