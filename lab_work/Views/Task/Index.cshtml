@model IEnumerable<lab_work.Models.ProjectTask> // specifies the collection of projecttasks
@{
    ViewData["Title"] = "Tasks Lists";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Project Id</th>
            <th>Actions</th>

        </tr>
    </thead>

    <tbody>

        @foreach (var task in Model)
        {
            <tr>
                <td>@task.ProjectTaskId</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.ProjectId</td>
                <td>
                    <a asp-action="Details" asp-route-projectTaskId="@task.ProjectTaskId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-projectTaskId="@task.ProjectTaskId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-projectTaskId="@task.ProjectTaskId" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }

    </tbody>

</table>
<!-- Button to create a new Task-->
<a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>
<a asp-action="Index" asp-controller="Project" class="btn btn-secondary">Back to Projects</a>
