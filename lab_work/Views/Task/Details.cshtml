@model ProjectTask
@{
    ViewData["Title"] = "Task Details";
}

<div class="card shadow border-0 mt-4">
    <div class="card header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Task Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ProjectId" hidden />
            <div class="border p-3 mt-4">

                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Project" disabled class="form-control border-0 shadow" />
                    <label asp-for="Project" class="ms-2"></label>
                </div>


                <div class="row">
                    <div class="col-6 col-md-3">
                        <a asp-asp-controller="Task" asp-action="Edit" asp-route-id="@Model.ProjectTaskId" class="btn btn-primary form-control">Edit</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Task" asp-action="Index" class="btn btn-outline-warning border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




